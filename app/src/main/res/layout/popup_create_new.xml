<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/transparent">

    <ImageView
        android:id="@+id/imvCreateNew"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bg_create_new"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create new"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/imgBtnCreateSpace"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_in_create_new"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/imgBtnCreateTag"
        android:layout_marginBottom="30dp"/>

    <ImageButton
        android:id="@+id/imgBtnCreateTag"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_in_create_new"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/imgBtnCreateSpace"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_space"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/imgBtnCreateSpace"
        app:layout_constraintBottom_toBottomOf="@id/imgBtnCreateSpace"
        app:layout_constraintStart_toStartOf="@id/imgBtnCreateSpace"
        app:layout_constraintEnd_toEndOf="@id/imgBtnCreateSpace"/>

    <ImageView
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:src="@drawable/ic_tag"
        app:tint="@color/white"
        app:layout_constraintTop_toTopOf="@id/imgBtnCreateTag"
        app:layout_constraintBottom_toBottomOf="@id/imgBtnCreateTag"
        app:layout_constraintStart_toStartOf="@id/imgBtnCreateTag"
        app:layout_constraintEnd_toEndOf="@id/imgBtnCreateTag"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Space"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/imgBtnCreateSpace"
        app:layout_constraintStart_toStartOf="@id/imgBtnCreateSpace"
        app:layout_constraintEnd_toEndOf="@id/imgBtnCreateSpace"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tag"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintTop_toBottomOf="@id/imgBtnCreateTag"
        app:layout_constraintStart_toStartOf="@id/imgBtnCreateTag"
        app:layout_constraintEnd_toEndOf="@id/imgBtnCreateTag"
        android:layout_marginTop="10dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>