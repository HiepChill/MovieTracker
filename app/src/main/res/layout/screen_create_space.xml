<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <!-- Header Section -->
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/imvArrowBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:src="@drawable/ic_arrow_back" />
        </LinearLayout>

        <EditText
            android:id="@+id/edtSpaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="# Enter Space"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp" />
    </LinearLayout>

    <!-- Color Selection Section -->
    <LinearLayout
        android:id="@+id/colorSelection"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/btnDone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Color"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@drawable/ic_create_tag_screen"
            android:backgroundTint="#15192D"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/magenta"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/magenta" />

                <RelativeLayout
                    android:id="@+id/aquaGreen"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/magenta"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/aquaGreen" />

                <RelativeLayout
                    android:id="@+id/chromeYellow"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/aquaGreen"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/chromeYellow" />

                <RelativeLayout
                    android:id="@+id/purple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/magenta"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/purple" />

                <RelativeLayout
                    android:id="@+id/royalBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/purple"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/royalBlue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/red"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/red" />

                <RelativeLayout
                    android:id="@+id/claret"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/red"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/claret" />

                <RelativeLayout
                    android:id="@+id/smokeyGrey"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/claret"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/smokeyGrey" />

                <RelativeLayout
                    android:id="@+id/blazeOrange"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/red"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/blazeOrange" />

                <RelativeLayout
                    android:id="@+id/bluePurple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/blazeOrange"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/bluePurple" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/green"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/green" />

                <RelativeLayout
                    android:id="@+id/cobaltBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/green"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/cobaltBlue" />

                <RelativeLayout
                    android:id="@+id/skyBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cobaltBlue"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/skyBlue" />

                <RelativeLayout
                    android:id="@+id/brown"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/green"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/brown" />

                <RelativeLayout
                    android:id="@+id/purpleJam"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/brown"
                    android:background="@drawable/bg_color_case"
                    android:backgroundTint="@color/purpleJam" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="185dp"
            android:background="@drawable/ic_create_tag_screen"
            android:backgroundTint="#15192D"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/icon1"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_space_logo_1"
                    android:background="@drawable/bg_icon_case"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:id="@+id/icon2"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_space_logo_2"
                    android:background="@drawable/bg_icon_case"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:id="@+id/icon3"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_space_logo_3"
                    android:background="@drawable/bg_icon_case"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:id="@+id/icon4"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_space_logo_4"
                    android:background="@drawable/bg_icon_case" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                >

                <ImageView
                    android:id="@+id/icon5"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:padding="5dp"
                    android:focusable="true"
                    android:src="@drawable/ic_space_logo_5"
                    android:background="@drawable/bg_icon_case"
                    android:layout_marginRight="20dp" />

                <ImageView
                    android:id="@+id/icon6"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:padding="5dp"
                    android:src="@drawable/ic_space_logo_6"
                    android:background="@drawable/bg_icon_case" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Footer Section -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnDone"
        android:layout_width="132dp"
        android:layout_height="46dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="DONE"
        android:textColor="@color/white"
        android:backgroundTint="@color/magenta"
        android:background="@drawable/ic_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
