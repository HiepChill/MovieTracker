<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="409dp"
        android:layout_height="150dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imvArrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back"/>

        <EditText
            android:id="@+id/tag_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:hint="# Enter Tag"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="24sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ic_back"
        android:layout_width="410dp"
        android:layout_height="566dp"
        android:layout_marginStart="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="Color"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="377dp"
            android:layout_height="344dp"
            android:layout_margin="15dp"
            android:background="@drawable/ic_create_tag_screen"
            android:backgroundTint="#15192D"
            android:gravity="bottom|center_horizontal"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/row1"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/magenta"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/magenta" />

                <RelativeLayout
                    android:id="@+id/aquaGreen"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/magenta"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/aquaGreen" />

                <RelativeLayout
                    android:id="@+id/chromeYellow"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/aquaGreen"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/chromeYellow" />

                <RelativeLayout
                    android:id="@+id/purple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/magenta"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/purple" />

                <RelativeLayout
                    android:id="@+id/royalBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/purple"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/royalBlue" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row2"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/red"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/red" />

                <RelativeLayout
                    android:id="@+id/claret"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/red"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/claret" />

                <RelativeLayout
                    android:id="@+id/smokeyGrey"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/claret"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/smokeyGrey" />

                <RelativeLayout
                    android:id="@+id/blazeOrange"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/red"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/blazeOrange" />

                <RelativeLayout
                    android:id="@+id/bluePurple"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/blazeOrange"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/bluePurple" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/row3"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp">

                <RelativeLayout
                    android:id="@+id/green"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/green" />

                <RelativeLayout
                    android:id="@+id/cobaltBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/green"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/cobaltBlue" />

                <RelativeLayout
                    android:id="@+id/skyBlue"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/cobaltBlue"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/skyBlue" />

                <RelativeLayout
                    android:id="@+id/brown"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/green"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/brown" />

                <RelativeLayout
                    android:id="@+id/purpleJam"
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/brown"
                    android:background="@drawable/bg_color_palette"
                    android:backgroundTint="@color/purpleJam" />
            </RelativeLayout>

            <!-- Placeholder View -->
            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_weight="1" />

            <!-- Your TextView -->


        </LinearLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:layout_gravity="center"
            android:id="@+id/btnDone"
            android:text="DONE"
            android:textColor="@color/white"
            android:backgroundTint="@color/magenta"
            android:background="@drawable/ic_button" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
