<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".screens.DetailTagScreen"
    android:background="@color/background"
    >

    <ImageButton
        android:id="@+id/imgBtnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@color/transparent"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/tvNameTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="#Tag name Changggg"
        android:textColor="@color/magenta"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toTopOf="@+id/imgBtnBack"
        android:textStyle="bold"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvMovie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toTopOf="@+id/tvNameTag"
        android:padding="30dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>